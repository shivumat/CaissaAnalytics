# API Settings
API_TITLE=CaissaAnalytics
API_DESCRIPTION=Chess game analysis service
API_VERSION=0.1.0

# Database Settings
DATABASE_URL=sqlite+aiosqlite:///./caissa_analytics.db

# Stockfish Settings
STOCKFISH_PATH=/usr/games/stockfish
STOCKFISH_DEPTH=20
STOCKFISH_TIME_LIMIT=0.1

# OpenAI Settings (optional - if not provided, AI analysis will be skipped)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
OPENAI_BATCH_SIZE=10

# Analysis Settings
MAX_PGNS_PER_REQUEST=100
MISTAKE_THRESHOLD=100
